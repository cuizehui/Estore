<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">


        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />



<com.flyco.tablayout.CommonTabLayout
android:id="@+id/common_layout"
android:layout_width="match_parent"
android:layout_height="48dp"
android:background="@color/white"
app:tl_indicator_width="30dp"
app:tl_indicator_color="@color/purple"
app:tl_underline_height="2dp"
app:tl_divider_color="@color/purple"
app:tl_divider_width="2dp"
app:tl_tab_space_equal="true"
app:tl_textSelectColor="@color/purple"
app:tl_textUnselectColor="@color/black"
app:tl_textsize="16sp" />

<View style="@style/line_vertical" />

<android.support.v4.view.ViewPager
android:id="@+id/order_viewpager"
android:layout_width="match_parent"
android:layout_height="match_parent" />


    </LinearLayout>