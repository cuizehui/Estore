<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/content_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/middlePadding"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fun_all"
            style="@style/custom_home_type_text_style"
            android:drawableTop="@drawable/ic_all"
            android:text="@string/xianshiqiang" />

        <TextView
            android:id="@+id/fun_combo"
            style="@style/custom_home_type_text_style"
            android:drawableTop="@drawable/ic_cloud_tc"
            android:text="@string/mingpindian" />

        <TextView
            android:id="@+id/fun_charge"
            style="@style/custom_home_type_text_style"
            android:drawableTop="@drawable/ic_charge"
            android:text="@string/fenlei" />

        <TextView
            android:id="@+id/fun_wolrdgo"
            style="@style/custom_home_type_text_style"
            android:drawableTop="@drawable/ic_world_buy"
            android:text="@string/haiwaitao" />

    </LinearLayout>

</LinearLayout>