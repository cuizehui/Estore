<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/flash_sale_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >



        <ImageView
            android:id="@+id/shopcar_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="@dimen/margin_10dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/flash_sale_tv_productname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品名"

                android:textSize="@dimen/common_font_size_14"
                />

            <TextView
                android:id="@+id/flash_sale_tv_oldprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原价： "
                android:textColor="@color/original_border_color"
                android:textSize="@dimen/common_font_size_14"
                />
            <TextView
                android:id="@+id/flash_sale_tv_nowprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现价： + "
                android:textColor="@color/original_border_color"
                android:textSize="@dimen/common_font_size_14"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                >

                <TextView
                    android:id="@+id/starttimet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间"
                    android:textSize="@dimen/common_font_size_12"

                    />

                <TextView
                    android:layout_toRightOf="@id/starttimet"
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00"
                    android:textSize="@dimen/common_font_size_12"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    />
                <TextView

                    android:layout_alignParentRight="true"
                    android:id="@+id/et_item_shopcart_cloth_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_2dp"
                    android:paddingBottom="@dimen/padding_2dp"
                    android:paddingLeft="@dimen/padding_20dp"
                    android:paddingRight="@dimen/padding_20dp"
                    android:background="@drawable/shopcart_add_btn"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/original_border_color"
                    android:text="提醒"
                    />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@drawable/line_flashsale"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</LinearLayout>